<html>
  <head>
  </head>
  <body><div class="wrapper">
<div class="form-container">
    <h3 class="h3-form-post">Create a new Post</h3>
  <%= form_with model: @post, url: user_posts_path(), method: :post, data: { turbo_frame: "new" } do |f| %>    
    <div class="form-group">
      <%= f.label :title, "Insert a title" %>
      <%= f.text_field :title, class: 'form-control' %>
      <% if @post.errors[:title].any? %>
        <div class="error">
          <%= @post.errors[:title].first %>
        </div>
      <% end %>
    </div>    <div class="form-group">
      <%= f.label :text, "Insert a text" %>
      <%= f.text_area :text, required: false, class: 'form-control' %>
      <% if @post.errors[:text].any? %>
        <div class="error">
          <%= @post.errors[:text].first %>
        </div>
      <% end %>
    </div>    <%= f.submit 'Create Form Post', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>
</body>
</html>
