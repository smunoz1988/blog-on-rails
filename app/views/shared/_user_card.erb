<div class="users-container">
    <div class="user-box">
        <img src="<%= @user.photo %>" alt="user Photo" class="photo">
        <div class="user-details">
            <h2 class="user-name"><%= @user.name %></h2>
            <p class="user-posts-counter">Number of posts: <%= @user.posts_counter %></p>
        </div>
    </div>
</div>